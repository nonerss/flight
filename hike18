jumpBtn.Text = "Jump Boost: Normal"
jumpBtn.Size = UDim2.new(0.9, 0, 0, 30)
jumpBtn.Position = UDim2.new(0.05, 0, 0.2, 0)
jumpBtn.BackgroundColor3 = Color3.fromRGB(250, 150, 80)
